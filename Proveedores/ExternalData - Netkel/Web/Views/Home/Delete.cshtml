@model FiberCorp.ExternalData.Web.Models.SectorOperativoViewModel

<div class="row">
    <div class="col-sm-1 col-xs-2">
        <h2>Borrar</h2>
    </div>
</div>

<div class="row">
    <div class="col-sm-8 col-sm-offset-1">
        <div class="row">
            <div class="col-sm-offset-1">
                <h3>Esta seguro que desea borrar este Sector Operativo?</h3>
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row" style="padding:50px;">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Codigo)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Codigo)
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.HiddenFor(model => model.Codigo);
                <div class="row" style="padding:5px;">
                    <div class="form-actions no-color">
                        <div class="col-md-offset-1 col-md-10">
                            <input type="submit" value="Borrar" class="btn btn-select btn-select-customer" />
                            @Html.ActionLink("Volver", "Index", null, new { Class = "btn btn-select btn-select-customer" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
