<script type="text/html" id="pager-component">
    <div class="row pager-page-content">
        <div class="col-xs-4 col-sm-7  pager-total-registros">
            <span data-bind="text:' TOTAL DE REGISTROS: ' + TotalRecords()"></span>  
        </div>
            <div class="col-xs-8 col-sm-5 pull-right pager-total-registros">
                <span data-bind="visible: TotalPages() > 1">
                    <div class="col-xs-5 col-sm-4 text-right">
                        <a href="#" data-bind="click:goFirst"><i class="fa fa-fast-backward"></i></a>&nbsp;
                        <a href="#" data-bind="click:goPrev"><i class="fa fa-backward"></i></a>
                        <span>Página</span>
                    </div>
                    <div class="col-xs-2 col-sm-4">
                        <input type="text" data-bind="textInput: pageNumberInput, event: { blur: pageNumberInput.bind(null, PageNumber()) }" class="pager-input" />
                    </div>
                    <div class="col-xs-5 col-sm-4" text-left">
                        <span data-bind="text: 'de '+ TotalPages()"></span>
                        <a href="#" data-bind="click:goNext"><i class="fa fa-forward"></i></a>
                        <a href="#" data-bind="click:goLast"><i class="fa fa-fast-forward"></i></a>
                    </div>

                </span>
            </div>
</script>

<script type="text/javascript" src="~/Scripts/Components/pager.js"></script>