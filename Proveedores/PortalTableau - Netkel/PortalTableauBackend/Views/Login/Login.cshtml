@model FiberCorp.PortalTableau.Backend.Controllers.LoginModel

@{
    Layout = "../Shared/_LayoutPublic.cshtml";
}


<style>
    .signup-panel {
        padding: 5px;
        margin-top: 10px;
    }

        .signup-panel i {
            font-size: 1.5rem;
            line-height: 30px;
            color: #2de4ea;
        }

        .signup-panel form input, .signup-panel form span {
            height: 4rem;
        }

        .signup-panel .welcome {
            font-size: 2rem;
            text-align: center;
            margin-left: 0;
        }

        .signup-panel p {
            font-size: 0.975rem;
            font-weight: bold;
            margin-left: 25%;
        }

        .signup-panel button[type='submit'] {
            margin-top: 20px;
        }

    .input-group-label {
        min-width: 70px;
    }
    .input-group-label{
        background:#f4f4f4;
    }
    .btn-default2 {
    color: #fff;
    background-color: #2de4ea;
    font-weight:bold;
    text-transform:uppercase;
    border-radius:4px;
}
    .btn-default2:hover {
    color: #fff;
    background-color: #bebaba;
    font-weight:bold;
    text-transform:uppercase;
    border-radius:4px;
}
</style>
<div class="row">
    <div class="large-4 columns small-centered">
        <div class="signup-panel">
            <p class="welcome">¡Bienvenido!</p>
            <form method="post">
                <div class="row column">
                    <div class="input-group">
                        <span class="input-group-label">
                            <i class="fa fa-user"></i>
                        </span>
                        <input type="text" value="@Model.UserName" name="Username" placeholder="Usuario" class="input-group-field" />
                    </div>
                </div>
                <div class="row column">
                    <div class="input-group">
                        <span class="input-group-label">
                            <i class="fa fa-lock"></i>
                        </span>
                        <input type="password" name="Password" placeholder="Contraseña" class="input-group-field" />
                    </div>
                </div>
                @if (Model.IsLoggedIn.HasValue)
                {
                    <div class="alert callout" data-closable>
                        Usuario o contraseña incorrectos.
                        <button class="close-button" aria-label="Cerrar alerta" type="button" data-close>
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
                <div class="row column text-center">
                    <button type="submit" class="btn btn-default2">Ingresar</button>
                </div>
            </form>
        </div>
    </div>
</div>
